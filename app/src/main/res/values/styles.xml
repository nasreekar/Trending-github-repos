<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/toolBarTextColor</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="toolbarTextStyle">
        <item name="android:textColor">@color/toolBarTextColor</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="authorStyle">
        <item name="android:textColor">@color/repoTextColor</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="repoNameStyle">
        <item name="android:textColor">@color/repoTextColor</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="desriptionStyle">
        <item name="android:textColor">@color/repoTextColor</item>
        <item name="android:fontFamily">@font/pingfang_regular</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>
</resources>
